{
  "$schema": "https://demotime.elio.dev/demo-time.schema.json",
  "title": "Astro: Open and Extend index.astro",
  "description": "First open the Astro page, then add the Layout import in a second demo",
  "demos": [
    {
      "id": "open-content-config",
      "title": "Open Content Config",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/content.config.ts"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.keepEditor"
        }
      ]
    },
    {
      "id": "open-content-service",
      "title": "Open Content Service",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/services/ContentService.ts"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.keepEditor"
        }
      ]
    },
    {
      "id": "content-config-init-collection",
      "title": "Content Config Init Collection",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/content.config.ts"
        },
        {
          "action": "applyPatch",
          "path": "./src/content.config.ts",
          "contentPath": "snapshots/content.config-base.snapshot",
          "patch": "patches/content.config-init-blog-collection.patch"
        }
      ]
    },
    {
      "id": "content-config-collection-return",
      "title": "Content Config Collection Return",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/content.config.ts"
        },
        {
          "action": "applyPatch",
          "path": "./src/content.config.ts",
          "contentPath": "snapshots/content.config-collection-defined.snapshot",
          "patch": "patches/content.config-collection-return.patch"
        }
      ]
    },
    {
      "id": "content-config-zod-schema",
      "title": "Content Config Zod Schema",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/content.config.ts"
        },
        {
          "action": "applyPatch",
          "path": "./src/content.config.ts",
          "contentPath": "snapshots/content.config-data-returned.snapshot",
          "patch": "patches/content.config-zod-schema.patch"
        }
      ]
    },
    {
      "id": "run-backend-cms",
      "title": "Run Backend CMS",
      "description": "Open the integrated terminal and run `dotnet run` in the Backend/DeveloperBlog.Umbraco folder",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.new"
        },
        {
          "action": "executeTerminalCommand",
          "command": "cd ../Backend/DeveloperBlog.Umbraco && dotnet run"
        }
      ]
    },
    {
      "id": "prepare-ts-generate-cmd",
      "title": "TS Generate",
      "description": "",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.new"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "npm run umb-ts-generate" }
        }
      ]
    },
    {
      "id": "prepare-dev-command",
      "title": "Open Terminal and Type Dev Command",
      "description": "Open the VS Code terminal and insert `npm run dev` without running it",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.new"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "npm run dev" }
        }
      ]
    }
