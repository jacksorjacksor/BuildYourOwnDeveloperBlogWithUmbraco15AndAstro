{
  "$schema": "https://demotime.elio.dev/demo-time.schema.json",
  "title": "Astro: Open and Extend index.astro",
  "description": "First open the Astro page, then add the Layout import in a second demo",
  "demos": [
    {
      "id": "open-index",
      "title": "Open index.astro",
      "description": "Open the main Astro page",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/index.astro"
        }
      ]
    },
    {
      "id": "insert-layout-import",
      "title": "Insert Layout Import",
      "description": "Add the Layout import inside the front-matter",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/index.astro"
        },
        {
          "action": "insert",
          "path": "./src/pages/index.astro",
          "position": "2,0",
          "content": "import Layout from '../layouts/Layout.astro';\n"
        }
      ]
    },
    {
      "id": "wrap-content-in-layout",
      "title": "Wrap Content with Layout Tags",
      "description": "Insert the `<Layout>` wrapper below the front-matter",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/index.astro"
        },
        {
          "action": "insert",
          "path": "./src/pages/index.astro",
          "position": "4,0",
          "content": "<Layout>\n  <!-- Html can go here -->\n</Layout>\n"
        }
      ]
    },
    {
      "id": "insert-h1-greeting",
      "title": "Insert H1 Greeting",
      "description": "Add an H1 element inside the Layout wrapper",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/index.astro"
        },
        {
          "action": "insert",
          "path": "./src/pages/index.astro",
          "position": "6,2",
          "content": "<h1 class=\"p-16 font-bold text-6xl\">Hello from Astro! ðŸš€</h1>\n"
        }
      ]
    },
    {
      "id": "prepare-dev-command",
      "title": "Open Terminal and Type Dev Command",
      "description": "Open the VS Code terminal and insert `npm run dev` without running it",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.toggleTerminal"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "npm run dev" }
        }
      ]
    },
    {
      "id": "reset-workspace",
      "title": "Reset Workspace",
      "description": "Revert all file changes back to the last Git commit",
      "steps": [
        {
          "action": "executeTerminalCommand",
          "command": "git reset --hard HEAD && git clean -fd"
        }
      ]
    }
