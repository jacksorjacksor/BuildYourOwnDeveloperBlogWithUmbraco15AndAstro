{
  "$schema": "https://demotime.elio.dev/demo-time.schema.json",
  "title": "Astro: Open and Extend index.astro",
  "description": "First open the Astro page, then add the Layout import in a second demo",
  "demos": [
    {
      "id": "open-slide-1",
      "title": "Open Slide 1",
      "description": "Revisit page routing",
      "steps": [
        {
          "action": "imagePreview",
          "path": "./_presentation/3-2_file-based-routing.png"
        }
      ]
    },
    {
      "id": "open-slide-2",
      "title": "Open Slide 2",
      "description": "Single level dynamic route",
      "steps": [
        {
          "action": "imagePreview",
          "path": "./_presentation/4-1-single-level-dynamic-route.png"
        }
      ]
    },
    {
      "id": "open-slide-3",
      "title": "Open Slide 3",
      "description": "Multi level dynamic route",
      "steps": [
        {
          "action": "imagePreview",
          "path": "./_presentation/4-2-multi-level-dynamic-route.png"
        }
      ]
    },
    {
      "id": "open-dynamic-route",
      "title": "Open [slug].astro",
      "description": "Open the [slug].astro",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/exercises/[slug].astro"
        }
      ]
    },
    {
      "id": "open-content-collections-config",
      "title": "Open content.config.ts",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/content.config.ts"
        }
      ]
    },
    {
      "id": "slug-imports",
      "title": "[slug] Add Imports",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/exercises/[slug].astro"
        },
        {
          "action": "applyPatch",
          "path": "./src/pages/exercises/[slug].astro",
          "contentPath": "snapshots/[slug]-base.snapshot",
          "patch": "patches/[slug]-insert-imports.patch"
        }
      ]
    },
    {
      "id": "open-exercise-example",
      "title": "Open Exercise MD File",
      "description": "Open Exercise MD File",
      "steps": [
        {
          "action": "open",
          "path": "./src/data/workshop/exercises/exercise-1.md"
        }
      ]
    },
    {
      "id": "prepare-dev-command",
      "title": "Open Terminal and Type Dev Command",
      "description": "Open the VS Code terminal and insert `npm run dev` without running it",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.toggleTerminal"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "npm run dev" }
        }
      ]
    }
