{
  "$schema": "https://demotime.elio.dev/demo-time.schema.json",
  "title": "Astro: Open and Extend index.astro",
  "description": "First open the Astro page, then add the Layout import in a second demo",
  "demos": [
    {
      "id": "run-backend-cms",
      "title": "Run Backend CMS",
      "description": "Open the integrated terminal and run `dotnet run` in the Backend/DeveloperBlog.Umbraco folder",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.new"
        },
        {
          "action": "executeTerminalCommand",
          "command": "cd ../Backend/DeveloperBlog.Umbraco && dotnet run"
        }
      ]
    },
    {
      "id": "prepare-dev-command",
      "title": "Open Terminal and Type Dev Command",
      "description": "Open the VS Code terminal and insert `npm run dev` without running it",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.new"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "npm run dev" }
        }
      ]
    },
    {
      "id": "open-blog-listing",
      "title": "Open Blog Listing",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/blog/index.astro"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.keepEditor"
        }
      ]
    },
    {
      "id": "blog-listing-init-fetch",
      "title": "Listing Fetch",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/blog/index.astro"
        },
        {
          "action": "applyPatch",
          "path": "./src/pages/blog/index.astro",
          "contentPath": "snapshots/blog-index-base.snapshot",
          "patch": "patches/blog-index-init-fetch.patch"
        }
      ]
    },
    {
      "id": "blog-listing-json-data",
      "title": "Listing Json Data",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/blog/index.astro"
        },
        {
          "action": "applyPatch",
          "path": "./src/pages/blog/index.astro",
          "contentPath": "snapshots/blog-index-fetch-added.snapshot",
          "patch": "patches/blog-index-data-json.patch"
        }
      ]
    },
    {
      "id": "blog-listing-list-basic",
      "title": "Listing Basic",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/blog/index.astro"
        },
        {
          "action": "applyPatch",
          "path": "./src/pages/blog/index.astro",
          "contentPath": "snapshots/blog-index-json-data-added.snapshot",
          "patch": "patches/blog-index-list-basic.patch"
        }
      ]
    },
    {
      "id": "blog-listing-list-styled",
      "title": "Listing Styled",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/blog/index.astro"
        },
        {
          "action": "applyPatch",
          "path": "./src/pages/blog/index.astro",
          "contentPath": "snapshots/blog-index-basic-list-added.snapshot",
          "patch": "patches/blog-index-list-styled.patch"
        }
      ]
    },
    {
      "id": "open-blog-page",
      "title": "Open Blog Page",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/blog/[slug].astro"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.keepEditor"
        }
      ]
    },
    {
      "id": "blog-page-fetch",
      "title": "Blog Page Fetch",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/blog/[slug].astro"
        },
        {
          "action": "applyPatch",
          "path": "./src/pages/blog/[slug].astro",
          "contentPath": "snapshots/blog-[slug]-base.snapshot",
          "patch": "patches/blog-[slug]-init-fetch.patch"
        }
      ]
    },
    {
      "id": "blog-page-map-data",
