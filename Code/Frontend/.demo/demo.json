{
  "$schema": "https://demotime.elio.dev/demo-time.schema.json",
  "title": "Astro: Open and Extend index.astro",
  "description": "First open the Astro page, then add the Layout import in a second demo",
  "demos": [
    {
      "id": "open-index",
      "title": "Open index.astro",
      "description": "Open the main Astro page",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/index.astro"
        }
      ]
    },
    {
      "id": "insert-layout-import",
      "title": "Insert Layout Import",
      "description": "Add the Layout import inside the front-matter",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/index.astro"
        },
        {
          "action": "insert",
          "path": "./src/pages/index.astro",
          "position": "2,0",
          "content": "import Layout from '../layouts/Layout.astro';\n"
        }
      ]
    },
    {
      "id": "reset-workspace",
      "title": "Reset Workspace",
      "description": "Revert all file changes back to the last Git commit",
      "steps": [
        {
          "action": "executeTerminalCommand",
          "command": "git reset --hard HEAD && git clean -fd"
        }
      ]
    }
  ]
}
