{
  "$schema": "https://demotime.elio.dev/demo-time.schema.json",
  "title": "Astro: Open and Extend index.astro",
  "description": "First open the Astro page, then add the Layout import in a second demo",
  "demos": [
    {
      "id": "open-content-blog-page",
      "title": "Open Blog Page",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/blog/[slug].astro"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.keepEditor"
        }
      ]
    },
    {
      "id": "blog-components-prop",
      "title": "Blog Components Property",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/blog/[slug].astro"
        },
        {
          "action": "applyPatch",
          "path": "./src/pages/blog/[slug].astro",
          "contentPath": "snapshots/blog-[slug]-base.snapshot",
          "patch": "patches/blog-[slug]-components-prop.patch"
        }
      ]
    },
    {
      "id": "open-block-list",
      "title": "Open Block List",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/components/BlockList.astro"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.keepEditor"
        }
      ]
    },
    {
      "id": "blocklist-build-1",
      "title": "Blocklist Build 1",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/components/BlockList.astro"
        },
        {
          "action": "applyPatch",
          "path": "./src/components/BlockList.astro",
          "contentPath": "snapshots/BlockList-base.snapshot",
          "patch": "patches/BlockList-add-imports.patch"
        }
      ]
    },
    {
      "id": "blocklist-build-2",
      "title": "Blocklist Build 2",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/components/BlockList.astro"
        },
        {
          "action": "applyPatch",
          "path": "./src/components/BlockList.astro",
          "contentPath": "snapshots/BlockList-imports-added.snapshot",
          "patch": "patches/BlockList-add-props.patch"
        }
      ]
    },
    {
      "id": "blocklist-build-3",
      "title": "Blocklist Build 3",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/components/BlockList.astro"
        },
        {
          "action": "applyPatch",
          "path": "./src/components/BlockList.astro",
          "contentPath": "snapshots/BlockList-props-added.snapshot",
          "patch": "patches/BlockList-add-component-map.patch"
        }
      ]
    },
    {
      "id": "blocklist-build-4",
      "title": "Blocklist Build 4",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/components/BlockList.astro"
        },
        {
          "action": "applyPatch",
          "path": "./src/components/BlockList.astro",
          "contentPath": "snapshots/BlockList-component-map-added.snapshot",
          "patch": "patches/BlockList-render-blocks.patch"
        }
      ]
    },
    {
      "id": "open-blocks",
      "title": "Open Blocks",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/components/blocks/RichTextComponent.astro"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.keepEditor"
        },
        {
          "action": "open",
          "path": "./src/components/blocks/QuoteComponent.astro"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.keepEditor"
        },
        {
          "action": "open",
          "path": "./src/components/blocks/ImageComponent.astro"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.keepEditor"
        }
      ]
    },
    {
      "id": "add-blocklist-renderer",
      "title": "Blog Page Render Blocks",
      "description": "",
      "steps": [
        {
          "action": "open",
          "path": "./src/pages/blog/[slug].astro"
        },
        {
          "action": "applyPatch",
          "path": "./src/pages/blog/[slug].astro",
          "contentPath": "snapshots/blog-[slug]-props-added.snapshot",
          "patch": "patches/blog-[slug]-render-blocks.patch"
        }
      ]
    },
    {
      "id": "run-backend-cms",
      "title": "Run Backend CMS",
      "description": "Open the integrated terminal and run `dotnet run` in the Backend/DeveloperBlog.Umbraco folder",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.new"
        },
        {
          "action": "executeTerminalCommand",
          "command": "cd ../Backend/DeveloperBlog.Umbraco && dotnet run"
        }
      ]
    },
    {
      "id": "prepare-dev-command",
      "title": "Open Terminal and Type Dev Command",
      "description": "Open the VS Code terminal and insert `npm run dev` without running it",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.new"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.terminal.sendSequence",
          "args": { "text": "npm run dev" }
        }
      ]
    }
