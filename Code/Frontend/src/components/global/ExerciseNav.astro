---
interface Props {
  previousExercise: any;
  nextExercise: any;
}
const { previousExercise, nextExercise } = Astro.props;
---

<div class="mx-auto max-w-4xl flex w-full justify-between items-center gap-4 my-8">
  {previousExercise ? (
    <a
      class="border-indigo-600 border rounded-md inline-flex items-center justify-center py-2 px-5 text-center text-base font-medium text-indigo-600"
      href={`/exercises/${previousExercise.id}`}
    >
      ← Previous Exercise:<br />{previousExercise.data.title}
    </a>
  ) : <span></span>}
  <a
    class="border-indigo-600 border rounded-md inline-flex items-center justify-center py-3 px-7 text-center text-base font-medium text-indigo-600"
    href="/exercises"
  >
    Back to Exercise List
  </a>
  {nextExercise ? (
    <a
      class="border-indigo-600 border rounded-md inline-flex items-center justify-center py-2 px-5 text-center text-base font-medium text-indigo-600"
      href={`/exercises/${nextExercise.id}`}
    >
      → Next Exercise:<br />{nextExercise.data.title}
    </a>
  ) : <span></span>}
</div>