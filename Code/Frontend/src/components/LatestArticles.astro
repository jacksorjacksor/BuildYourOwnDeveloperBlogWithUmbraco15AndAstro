---
import { getCollection } from 'astro:content';
import SiteImage from './elements/SiteImage.astro';
const blogs = await getCollection('blog');
let articlesToShow = 3;
---

<section class="">
  <div class="mx-auto max-w-screen-xl px-4 py-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-bold sm:text-3xl text-center pb-4">Latest Blog Articles</h2>

    <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-8 md:grid-cols-2 lg:grid-cols-3">
      {
        blogs.slice(0, articlesToShow).map((article) => (
          <article class="flex flex-col items-start justify-between">
            <div class="relative w-full">
              <SiteImage
                mediaPicker={article.data.content.properties?.summaryImage}
                cssClass="aspect-video w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]"
              />
              <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10" />
            </div>
            <div class="max-w-xl">
              <div class="mt-8 flex items-center gap-x-4 text-xs">
                <time datetime="2020-03-16" class="text-gray-500">
                  Mar 16, 2020
                </time>
              </div>
              <div class="group relative">
                <h3 class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-gray-600">
                  <a href={article.data.slug}>
                    <span class="absolute inset-0" />
                    {article.data.content.properties?.title}
                  </a>
                </h3>
                <p class="mt-5 line-clamp-3 text-sm/6 text-gray-600">
                  Illo sint voluptas. Error voluptates culpa eligendi. Hic vel totam vitae illo. Non
                  aliquid explicabo necessitatibus unde. Sed exercitationem placeat consectetur
                  nulla deserunt vel. Iusto corrupti dicta.
                </p>
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
