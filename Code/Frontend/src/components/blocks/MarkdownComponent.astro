---
import type {
  ApiBlockListModelItemsItem,
  RichTextComponentElementModel,
} from '../../umbraco-client/model';

interface Props {
  block: ApiBlockListModelItemsItem;
}

const { block } = Astro.props;

const content = block.content as RichTextComponentElementModel;
---

<div
  set:html={content?.properties?.richText?.markup}
class="prose prose-li:list-decimal py-5 text-base leading-relaxed text-body-color dark:text-dark-6"
/>
